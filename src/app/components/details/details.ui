<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="AlbumDetailsWidget" parent="GtkBox">
    <child>
      <object class="AdwClamp">
        <property name="vexpand">1</property>
        <property name="hexpand">1</property>
        <property name="maximum-size">900</property>
        <property name="margin-bottom">12</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="vexpand">1</property>
            <property name="hexpand">1</property>
            <child>
              <object class="GtkRevealer" id="header_revealer">
                <property name="transition-type">slide-down</property>
                <child>
                <object class="AdwSqueezer">
								<property name="valign">center</property>
								<property name="homogeneous">0</property>
								<property name="transition-type">crossfade</property>
                  <child>
                  <object class="GtkBox" id="header">
                    <property name="valign">start</property>
                    <property name="vexpand">0</property>
                    <child>
                    <object class="GtkFrame">
                    <property name="margin-top">18</property>
										<property name="margin-start">12</property>
										<property name="margin-bottom">6</property>
										<property name="halign">center</property>
                    <style>
                        <class name="card"/>
                    </style>
                      <child>
                        <object class="GtkOverlay">
                          <child>
                            <object class="GtkImage" id="album_art">
                              <property name="width-request">200</property>
                              <property name="height-request">200</property>
                              <property name="icon-name">emblem-music-symbolic</property>
                              <style>
                                <class name="details__album-art"/>
                              </style>
                            </object>
                          </child>
                          <child type="overlay">
                            <object class="GtkButton" id="info_button">
                              <property name="icon-name">preferences-system-details-symbolic</property>
                              <property name="halign">end</property>
                              <property name="valign">end</property>
                              <property name="margin-start">6</property>
                              <property name="margin-end">6</property>
                              <property name="margin-top">6</property>
                              <property name="margin-bottom">6</property>
                              <property name="has-frame">1</property>
                              <style>
                                <class name="circular"/>
                                <class name="osd"/>
                                <class name="info_btn"/>
                              </style>
                            </object>
                          </child>
                        </object>
                      </child>
                    </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="hexpand">1</property>
												<property name="margin-start">18</property>
                        <property name="valign">center</property>
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel" id="album_label">
                            <property name="halign">start</property>
                            <property name="label">Album</property>
                            <property name="wrap">1</property>
                            <property name="ellipsize">end</property>
                            <property name="max-width-chars">50</property>
                            <property name="lines">4</property>
                            <property name="xalign">0</property>
                            <style>
                              <class name="title-1"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLinkButton" id="artist_button">
                            <property name="receives-default">1</property>
                            <property name="halign">start</property>
                            <property name="valign">center</property>
                            <property name="has-frame">0</property>
                            <child>
                              <object class="GtkLabel" id="artist_button_label">
                                <property name="hexpand">1</property>
                                <property name="vexpand">1</property>
                                <property name="label">Artist</property>
                                <property name="ellipsize">middle</property>
                                <property name="xalign">0</property>
                              </object>
                            </child>
                            <style>
                              <class name="details__more"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="like_button">
                        <property name="receives-default">1</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
												<property name="margin-end">12</property>
                        <style>
                          <class name="circular"/>
                          <class name="details__like"/>
                        </style>
                      </object>
                    </child>
                  </object>
                  </child>
                  <child>
                  <object class="GtkBox" id="header_mobile">
                    <property name="orientation">vertical</property>
                    <property name="valign">start</property>
                    <property name="spacing">18</property>
                    <property name="vexpand">0</property>
                    <child>
                    <object class="GtkFrame">
                    <property name="margin-top">18</property>
										<property name="halign">center</property>
                    <style>
                        <class name="card"/>
                    </style>
                      <child>
                        <object class="GtkOverlay">
                          <child>
                            <object class="GtkImage" id="album_art_mobile">
                              <property name="width-request">200</property>
                              <property name="height-request">200</property>
                              <property name="icon-name">emblem-music-symbolic</property>
                              <style>
                                <class name="details__album-art"/>
                              </style>
                            </object>
                          </child>
                          <child type="overlay">
                            <object class="GtkButton" id="info_button_mobile">
                              <property name="icon-name">preferences-system-details-symbolic</property>
                              <property name="halign">end</property>
                              <property name="valign">end</property>
                              <property name="margin-start">6</property>
                              <property name="margin-end">6</property>
                              <property name="margin-top">6</property>
                              <property name="margin-bottom">6</property>
                              <property name="has-frame">1</property>
                              <style>
                                <class name="circular"/>
                                <class name="osd"/>
                                <class name="info_btn"/>
                              </style>
                            </object>
                          </child>
                        </object>
                      </child>
                    </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="hexpand">1</property>
                        <property name="valign">center</property>
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkLabel" id="album_label_mobile">
                            <property name="halign">center</property>
                            <property name="label">Album</property>
                            <property name="wrap">1</property>
                            <property name="ellipsize">end</property>
                            <property name="max-width-chars">50</property>
                            <property name="lines">4</property>
                            <property name="xalign">0.5</property>
                            <style>
                              <class name="title-1"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLinkButton" id="artist_button_mobile">
                            <property name="receives-default">1</property>
                            <property name="halign">center</property>
                            <property name="valign">center</property>
                            <property name="has-frame">0</property>
                            <child>
                              <object class="GtkLabel" id="artist_button_label_mobile">
                                <property name="hexpand">1</property>
                                <property name="vexpand">1</property>
                                <property name="label">Artist</property>
                                <property name="ellipsize">middle</property>
                                <property name="xalign">0.5</property>
                              </object>
                            </child>
                            <style>
                              <class name="details__more"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="like_button_mobile">
                        <property name="receives-default">1</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
												<property name="margin-bottom">18</property>
                        <style>
                          <class name="circular"/>
                          <class name="details__like"/>
                        </style>
                      </object>
                    </child>
                  </object>
                  </child>
                </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow" id="scrolled_window">
                <property name="hscrollbar-policy">never</property>
                <property name="propagate-natural-width">1</property>
                <property name="hexpand">1</property>
								<property name="margin-start">12</property>
								<property name="margin-end">12</property>
								<property name="margin-top">12</property>
                <property name="vexpand">1</property>
                <child>
                  <object class="GtkListView" id="album_tracks">
										<property name="show-separators">true</property>
                    <property name="valign">start</property>
                    <style>
                      <class name="song__list"/>
                      <class name="card"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="details"/>
    </style>
  </template>
</interface>

